// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Merchant {
  id        String   @id @default(uuid())
  name      String?
  domain    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  orders    Order[]
  products  Product[]
  customers Customer[]

  @@map("Merchant")
}

model Customer {
  id               String    @id @default(uuid())
  merchantId       String    @map("merchant_id")
  email            String?
  firstName        String?   @map("first_name")
  lastName         String?   @map("last_name")
  totalSpent       Decimal   @default(0) @map("total_spent")
  ordersCount      Int       @default(0) @map("orders_count")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  lastOrderAt      DateTime? @map("last_order_at")
  acceptsMarketing Boolean   @default(false) @map("accepts_marketing")

  // Relations
  merchant Merchant @relation(fields: [merchantId], references: [id])
  orders   Order[]

  @@map("Customer")
}

model Product {
  id          String   @id @default(uuid())
  merchantId  String   @map("merchant_id")
  title       String
  handle      String?
  productType String?  @map("product_type")
  vendor      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  merchant  Merchant   @relation(fields: [merchantId], references: [id])
  lineItems LineItem[]

  @@map("Product")
}

model Order {
  id               String    @id @default(uuid())
  merchantId       String    @map("merchant_id")
  customerId       String?   @map("customer_id")
  orderNumber      String?   @map("order_number")
  email            String?
  totalPrice       Decimal   @map("total_price")
  subtotalPrice    Decimal   @map("subtotal_price")
  totalTax         Decimal   @default(0) @map("total_tax")
  currency         String    @default("USD")
  financialStatus  String    @map("financial_status")
  fulfillmentStatus String? @map("fulfillment_status")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  processedAt      DateTime? @map("processed_at")

  // Relations
  merchant  Merchant   @relation(fields: [merchantId], references: [id])
  customer  Customer?  @relation(fields: [customerId], references: [id])
  lineItems LineItem[]

  @@map("Order")
}

model LineItem {
  id        String  @id @default(uuid())
  orderId   String  @map("order_id")
  productId String? @map("product_id")
  title     String
  quantity  Int
  price     Decimal
  totalDiscount Decimal @default(0) @map("total_discount")

  // Relations
  order   Order    @relation(fields: [orderId], references: [id])
  product Product? @relation(fields: [productId], references: [id])

  @@map("LineItem")
}